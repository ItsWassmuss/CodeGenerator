<mahApps:MetroWindow x:Class="CodeGenerator.SelectionTable"
        xmlns:mahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectionTable" Height="500" Width="500" WindowTitleBrush="#FFF0F0F0" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid" Background="#FFF0F0F0">
        <ScrollViewer Name="MyScrollViewer" CanContentScroll="True" PanningMode="VerticalOnly"  >
            <StackPanel x:Name="MainSSl" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="100" Margin="0,10,0,0">
            </StackPanel>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="392,10,0,0">
            <Button x:Name="btnSelectAllTable" Content="SelectAllTable" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="100" Click="btnSelectAllTable_Click" />
            <Button x:Name="btnGenerate" Content="OK" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="100" Click="btnGenerate_Click"/>
        </StackPanel>
    </Grid>
</mahApps:MetroWindow>
